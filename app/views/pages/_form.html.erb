<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div class="errors">
      <h3 class="error-title">Errors on form</h3>

      <ul>
        <% @page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field(:user_id, :value => current_user.id, :id => nil) %>

  <div class="field">
    <%= f.label(:title) %><br>
    <%= f.text_field(:title, :placeholder => "Title of the page") %>
  </div>

  <div class="field">
    <%= f.label(:content) %><br>
    <%= f.text_area(:content, :size => "80x22") %>
  </div>

  <div class="actions">
    <%= link_to("Cancel", pages_path) %> or <%= f.submit("Create", :class => "button") %>
  </div>
<% end %>
